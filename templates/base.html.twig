    {% if app.user %}
    <div class="sidebar-user">
        <div class="avatar">{{ app.user.prenom|first|upper }}</div>
        <div class="info">
            <div class="name">{{ app.user.prenom }} {{ app.user.nom|first }}.</div>
            <div class="role">
