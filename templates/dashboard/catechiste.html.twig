{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - Catéchiste{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Tableau de Bord Catéchiste</h1>
            <p class="lead">Bienvenue {{ app.user.prenom }} {{ app.user.nom }} (Catéchiste)</p>
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Voir mes Catéchumènes</h5>
                            <p class="card-text">Visualiser la liste des catéchumènes assignés</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Saisir les Notes</h5>
                            <p class="card-text">Enregistrer les notes et progrès</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Journal de Classe</h5>
                            <p class="card-text">Consulter et mettre à jour le journal</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
