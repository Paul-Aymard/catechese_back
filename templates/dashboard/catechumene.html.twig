<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Tableau de Bord Catéchumène</h1>
            <p class="lead">Bienvenue {{ app.user.prenom }} {{ app.user.nom }} (Catéchumène)</p>
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Mes Informations</h5>
                            <p class="card-text">Consulter et mettre à jour mon profil</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Mes Notes</h5>
                            <p class="card-text">Consulter mes résultats et progrès</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Mes Classes</h5>
                            <p class="card-text">Consulter l'emploi du temps</p>
                            <a href="#" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
